                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CLR_NR)
                    <div>顏色</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CST_NR)
                    <div>成本分類代碼</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ORIGIN)
                    <div>原產地</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PRICE_P)
                    <div>預估單價</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ORG_CODE)
