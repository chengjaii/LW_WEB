                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QC_MK)
                    <div>檢驗註記</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VENDOR)
                    <div>供應廠商簡稱</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PROJECT)
