
@{
    @model IEnumerable<LW_WEB.Models.TestModels.ITEM_MST>
    ViewBag.Title = "ItemMST";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*麵包屑*@
<div class="ui breadcrumb">
    <a class="section">首頁</a>
    <i class="right chevron icon divider"></i>
    <a class="section">產品結構管理</a>
    <i class="right chevron icon divider"></i>
    <div class="active section">物料主檔資料 ItemMST</div>
</div>
@*功能列表*@
<div class="ui menu">
    <div class="item">
        <button class="left attached ui button blue"><i class="plus icon"></i>新增</button>
        <button class="attached ui button blue"><i class="trash outline icon"></i>刪除</button>
        <button class="attached ui button blue"><i class="save icon"></i>儲存</button>
        <button class="attached ui button blue"><i class="arrow circle left icon"></i>逆展</button>
        <button class="right attached ui button blue"><i class="copy icon"></i>複製</button>
    </div>
    <div class="item">
        <button class="left attached ui button blue"><i class="fork icon"></i>變異</button>
        <button class="right attached ui button blue"><i class="dropbox icon"></i>舊料</button>
    </div>
    @*搜尋*@
    <div class="right item">
        <div class="ui icon input">
            <input type="text" placeholder="搜尋物號編號...">
            <i class="search link icon"></i>
        </div>
    </div>
</div>
<div>
    <table class="ui blue selectable celled table">
        <thead class="ui center aligned segment">
            <tr>
                <th>
                    <div>功能</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CODE)
                    <div>物料編號</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CDESCRIP)
                    <div>中文品名</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DESCRIP)
                    <div>英文品名</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SPEC)
                    <div>中文規格</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UNIT)
                    <div>單位</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.U_CONVERT)
                    <div>單位數量換算率</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.METAL)
                    <div>材質</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MATERIAL)
                    <div>物料種類</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CLASS_F)
                    <div>價格等級</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CLASS_S)
                    <div>分類變異記錄</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CLASS)
                    <div>ABC類別</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.P_MODE)
                    <div>製作方式分類</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ACCT_ID)
                    <div>會計科目</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PRICE)
                    <div>成本單價</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PRICE_S)
                    <div>美金售價</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DRAW_MAN)
                    <div>製圖者</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PAPER_SIZE)
                    <div>圖紙尺寸</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DW_LOCATE)
