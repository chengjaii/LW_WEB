                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NOTE)
                    <div>備註</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PRICE_C)
                    <div>成本平均單價</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WEIGTH)
                    <div>重量</div>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ESPEC)
