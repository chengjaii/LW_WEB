@{
    ViewBag.Title = "Description";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    @*彈出視窗，利用class自訂義ModalsText來取得id值，並彈出class為id值的內容視窗*@
    $(function () {
        $(".ModalsText").click(function () {
            var divClass = $(this).attr('id')
            $('.' + divClass).modal('setting', 'closable', false)
            $('.' + divClass).modal('show');
        });
    });
</script>

