
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*麵包屑*@
<div class="ui breadcrumb">
    <a class="section">首頁</a>
    <i class="right chevron icon divider"></i>
    <a class="section">設定</a>
    <i class="right chevron icon divider"></i>
    <div class="active section">帳戶管理</div>
</div>

@*功能列表*@
<div class="ui menu">
    <div class="item">
        <div class="ui button blue">
            <i class="add user icon"></i>
            新增帳戶
        </div>
    </div>
    @*搜尋*@
    <div class="right item">
        <div class="ui icon input">
            <input type="text" placeholder="搜尋...">
            <i class="search link icon"></i>
        </div>
    </div>
</div>

@*帳戶列表*@
<table class="ui blue selectable celled table">
    <thead class="ui center aligned segment">
        <tr>
            <th>功能</th>
            <th>帳戶</th>
            <th>姓名</th>
            <th>修改日期</th>
            <th>信箱</th>
            <th>電話</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 1; i <= 6; i++){
        <tr>
            <td class="collapsing">
                <div class="ui small floated main menu">
                    <a class="trash outline icon item" title="刪除">
                        <i class="trash outline icon"></i>
                    </a>
                    <a class="write icon item" title="編輯">
                        <i class="write icon"></i>
                    </a>
                </div>
            </td>
            <td>lw2012</td>
            <td>
                <div data-inverted="" data-tooltip="這是個笨蛋 @i" data-position="top left">
                    John Lilki @i
                </div>
            </td>
            <td>九月 14, 2013</td>
            <td>jhlilk22@yahoo.com</td>
            <td>不是</td>
        </tr>
        }
        <tr>
            <td class="collapsing">
                <div class="ui small floated main menu">
                    <a class="trash outline icon item"title="刪除">
                        <i class="trash outline icon"></i>
                    </a>
                    <a class="write icon item"title="編輯">
                        <i class="write icon"></i>
                    </a>
                </div>
            </td>
            <td>lw2013</td>
            <td><div data-inverted="" data-tooltip="這是個傻子" data-position="top left">Jamie Harington</div></td>
            <td>一月 11, 2014</td>
            <td>jamieharingonton@yahoo.com</td>
            <td>是</td>
        </tr>
        <tr>
            <td class="collapsing">
                <div class="ui small floated main menu">
                    <a class="trash outline icon item"title="刪除">
                        <i class="trash outline icon"></i>
                    </a>
                    <a class="write icon item"title="編輯">
                        <i class="write icon"></i>
                    </a>
                </div>
            </td>
            <td>lw2014</td>
            <td><div data-inverted="" data-tooltip="這是個才子" data-position="top left">Jill Lewis</div></td>
            <td>五月 11, 2014</td>
            <td>jilsewris22@yahoo.com</td>
            <td>是</td>
        </tr>

    </tbody>

    @*分頁*@
    <tfoot>
        <tr>
            <th colspan="6">
                <div class="ui right floated pagination menu">
                    <a class="icon item">
                        <i class="left chevron icon"></i>
                    </a>
                    <a class="item">1</a>
                    <a class="item">2</a>
                    <a class="item">3</a>
                    <a class="item">4</a>
                    <a class="icon item">
                        <i class="right chevron icon"></i>
                    </a>
                </div>
            </th>
        </tr>
    </tfoot>
</table>

