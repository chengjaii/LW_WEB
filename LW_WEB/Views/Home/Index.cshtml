
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" charset="utf-8" />
    <script src="~/Scripts/jquery-3.1.0.min.js"></script>
    <link rel="stylesheet" href="~/semantic/dist/semantic.min.css" />
    <script src="~/semantic/dist/semantic.min.js"></script>
    <title>@Resources.Resource.LoginLeadwellTitle</title>
    <style type="text/css">
        body {
            background-color: #DADADA;
        }

            body > .grid {
                height: 100%;
            }

        .image {
            margin-top: -100px;
        }

        .column {
            max-width: 450px;
        }
    </style>
    <script>
    $(document)
      .ready(function () {
          $('.ui.form')
            .form({
                fields: {
                    email: {
                        identifier: 'login-id',
                        rules: [
                          {
                              type: 'empty',
                              prompt: '@HomeLangZHTW.HomeResource.LoginERROR_1'
                          }
                        ]
                    },
                    password: {
                        identifier: 'login-pw',
                        rules: [
                          {
                              type: 'empty',
                              prompt: '@HomeLangZHTW.HomeResource.LoginERROR_2'
                              },
                              {
                                  type: 'length[6]',
                                  prompt: '@HomeLangZHTW.HomeResource.LoginERROR_2_1'
                              }
                            ]
                        }
                    }
                })
              ;
          })
        ;
    </script>
</head>
<body>
    <div class="ui middle aligned center aligned grid">
        <div class="column">
            <h2 class="ui teal image header">
                <img src="~/images/EIP_1.png" class="image">
                <div class="content">@Resources.Resource.LeadwellEIP</div>
            </h2>
            <form class="ui large form">
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="text" name="login-id" placeholder="@Resources.Resource.LoginID">
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="login-pw" placeholder="@Resources.Resource.LoginPassword">
                        </div>
                    </div>
                    <div class="ui fluid large teal submit button">@Resources.Resource.FormSumbit</div>
                </div>

                <div class="ui error message"></div>

            </form>

            <div class="ui message">
                @Resources.Resource.CopyrightInformation <a href="mailto:info@leadwell.com.tw">@Resources.Resource.ITEmail</a>
            </div>
        </div>
    </div>
</body>
</html>
